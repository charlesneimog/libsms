
Import('env')


sms_tools = Split(' smsAnal smsSynth smsClean \
        	smsMod smsPrint smsResample \
        	smsSynthDet smsToYaml' )

#sms_cflags = '-g -Wall'
#sms_libpath = '../src'

sms_libs =  'm', 'sndfile', 'sms', 'fftw3f'

for t in sms_tools:
	t_src = t+'.c'
	tool =env.Program( target = t, source = t_src, LIBS = sms_libs, CPPPATH = '../src', LIBPATH = '../src')
        #I shouldn't have to append CPPPATH here because it is set in SConstruct.. but...
        Depends(tool, '../src/libsms.a')

  
 
