# -*- python -*-
# scons script for libsms

Import('*')

lib_prefix = prefix+'/lib'
header_prefix = prefix+'/include'
header = "sms.h"
env.Alias('install', lib_prefix);

sms_sources = Split("""
                sms.c 
                smsAnalysis.c 
		smsSynthesis.c 
                sineSynth.c 
		peakDetection.c 
                harmDetection.c 
                peakContinuation.c 
		stocAnalysis.c 
		getResidual.c 
                spectralApprox.c 
		spectrum.c 
                fixTracks.c 
                fourier.c 
                filters.c 
                tables.c 
                windows.c 
                smsIO.c 
		soundIO.c 
                hybridize.c
""")

lib = env.Library( 'libsms', sms_sources )
#lib = env.SharedLibrary( 'libsms', sms_sources )
env.Install(lib_prefix, lib) 
env.Install(header_prefix, header)
env.Alias('install', header_prefix)
